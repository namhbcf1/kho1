# Environment variables for KhoAugment POS Backend

# Database Configuration
DATABASE_URL=your-d1-database-url

# JWT Configuration
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_EXPIRES_IN=7d

# VNPay Configuration
VNPAY_MERCHANT_ID=your-vnpay-merchant-id
VNPAY_SECRET_KEY=your-vnpay-secret-key
VNPAY_RETURN_URL=https://your-domain.com/payment/vnpay/return

# MoMo Configuration
MOMO_PARTNER_CODE=your-momo-partner-code
MOMO_ACCESS_KEY=your-momo-access-key
MOMO_SECRET_KEY=your-momo-secret-key
MOMO_RETURN_URL=https://your-domain.com/payment/momo/return
MOMO_NOTIFY_URL=https://your-domain.com/api/payments/momo/callback

# ZaloPay Configuration
ZALOPAY_APP_ID=your-zalopay-app-id
ZALOPAY_KEY1=your-zalopay-key1
ZALOPAY_KEY2=your-zalopay-key2
ZALOPAY_CALLBACK_URL=https://your-domain.com/api/payments/zalopay/callback

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password

# SMS Configuration
SMS_PROVIDER=your-sms-provider
SMS_API_KEY=your-sms-api-key

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100

# Security
CORS_ORIGIN=https://your-frontend-domain.com
ENCRYPTION_KEY=your-encryption-key

# Monitoring
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=info

# Business Configuration
DEFAULT_CURRENCY=VND
DEFAULT_TAX_RATE=0.1
DEFAULT_LANGUAGE=vi
DEFAULT_TIMEZONE=Asia/Ho_Chi_Minh
